<div class="sinlge-bar shopping">
  <a href="javascript:void(0)"
    title="{{ text_shopping_cart }}"
    class="single-icon">
    <i class="ti-bag"></i> <span class="total-count">{{ products|length }}</span>
  </a>
  <!-- Shopping Item -->
  <div class="shopping-item">
    <div class="dropdown-cart-header">
      <span>{{ products|length }} Items</span>
      <a href="{{ cart }}">View Cart</a>
    </div>
    <ul class="shopping-list">
      {% if products or vouchers %}
        {% for product in products %}
        <li>
        <a href="javascript:void(0)"  onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}" >
          <i class="fa fa-remove"></i>
        </a>
        <a class="cart-img" href="#">
          <img src="https://via.placeholder.com/70x70" alt="#" />
        </a>
        <h4>
          <a href="{{ product.href }}">{{ product.name }}</a>
        </h4>
        <p class="quantity">
          {{ product.quantity }} x - <span class="amount">{{ product.total }}</span>
        </p>
        </li>
        {% endfor %}
      {% else %}
      <li>
        <p class="text-center">{{ text_empty }}</p>
      </li>
      {% endif %}
      
      </li>
    </ul>
    <div class="bottom">
      <div class="total">
        <span>{{ totals[totals|length -1].title }}</span>
        <span class="total-amount">{{ totals[totals|length -1].text }}</span>
      </div>
      <a href="{{ checkout }}" title="{{ text_checkout }}" class="btn animate">
        Checkout
      </a>
    </div>
  </div>
  <!-- / End Shopping Item -->
</div>
